<Window x:Class="Cloudsdale_Win7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:MVVM="clr-namespace:Cloudsdale_Win7.MVVM"
        Title="Cloudsdale" Height="600" Width="800" Icon="Assets/cloudsdale.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="568*" />
            <ColumnDefinition Width="64*"/>
            <ColumnDefinition Width="151*"/>
        </Grid.ColumnDefinitions>
        <Frame Name="Frame" Source="/Login.xaml" NavigationUIVisibility="Hidden" Grid.Column="1" 
               MVVM:DisableNavigation.Disable="True" Navigated="Frame_Navigated" Grid.ColumnSpan="3" />
        <Grid>
            <ListView Name="CloudList" SelectionChanged="CloudListSelectionChanged"
                      Style="{StaticResource ListBoxStyle}">
                <ListView.ContextMenu>
                    <ContextMenu BorderBrush="#FF232323" Background="#FF212121">
                        <ContextMenu.Foreground>
                            <SolidColorBrush Color="{DynamicResource PrimaryBackground}"/>
                        </ContextMenu.Foreground>
                        <Button Content="Go to cloud"/>
                        <Button Content="Leave cloud"/>
                        <Button Content="Copy cloud link"/>
                        <Separator/>
                        <CheckBox Content="Subscribed"/>
                    </ContextMenu>
                </ListView.ContextMenu>
                <ListView.Background>
                    <SolidColorBrush Color="{DynamicResource PrimaryContent}"/>
                </ListView.Background>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="2" Orientation="Horizontal">
                            <Image Source="{Binding Path=[avatar][mini], Converter={StaticResource StringUriConv}}"
                                   Margin="3" Width="24" Height="24"/>
                            <TextBlock Text="{Binding Path=[name]}" Width="200" FontSize="14" Foreground="White" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</Window>
