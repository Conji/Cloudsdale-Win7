<Page x:Class="CloudsdaleWin7.Views.ExploreViews.ExplorePopular"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ItemViews="clr-namespace:CloudsdaleWin7.Views.ExploreViews.ItemViews" mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="ExplorePopular">

    <Grid>
        <WrapPanel DataContext="{Binding Path=PopularList}">
            <ItemsControl>
                <ItemsPanelTemplate>
                    <ItemViews:ItemBasic/>
                </ItemsPanelTemplate>
            </ItemsControl>
        </WrapPanel>
    </Grid>
</Page>
