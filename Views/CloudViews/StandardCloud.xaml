<Page x:Class="CloudsdaleWin7.Views.CloudViews.StandardCloud"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="553.759" Width="250"
	Title="StandardCloud">

    <Grid>
        <TextBlock x:Name="CloudName" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="230" Height="35" FontSize="16">
            <TextBlock.Foreground>
                <SolidColorBrush Color="{DynamicResource PrimaryBackground}"/>
            </TextBlock.Foreground>
        </TextBlock>
        <Image x:Name="CloudAvatar" Height="100" Margin="75,67,75,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="Shortlink" HorizontalAlignment="Left" Margin="10,193,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="230" FontSize="14">
            <TextBlock.Foreground>
                <SolidColorBrush Color="{DynamicResource PrimaryBackground}"/>
            </TextBlock.Foreground>
        </TextBlock>
        <Button Content="Leave this cloud..." Margin="34,264,33,0" VerticalAlignment="Top" Height="28" FontSize="14" FontFamily="Nirmala UI"/>
        <Separator HorizontalAlignment="Left" Height="52" Margin="10,212,0,0" VerticalAlignment="Top" Width="230">
            <Separator.Background>
                <SolidColorBrush Color="{DynamicResource PrimaryBackground}"/>
            </Separator.Background>
        </Separator>
        <Button Content="X" HorizontalAlignment="Left" Margin="216,10,0,0" VerticalAlignment="Top" Width="24" Height="23" Background="{x:Null}" FontSize="16" FontWeight="SemiBold" Click="Button_Click_1"/>

    </Grid>
</Page>
