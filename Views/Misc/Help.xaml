<Page x:Class="CloudsdaleWin7.Views.Misc.Help"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="Help">

    <Grid>
        <RichTextBox Margin="20,0">
            <FlowDocument>
                <Paragraph>
                    <Run Text="Cloudsdale App Help:" FontSize="16" FontWeight="SemiBold">
                        <Run.Foreground>
                            <SolidColorBrush Color="{DynamicResource PrimaryContent}"/>
                        </Run.Foreground>
                    </Run>
                </Paragraph>
                <Paragraph>
                    <Run Text="Before we get started, lets figure out what makes this different from using a web browser."/>
                </Paragraph>
                <Paragraph/>
            </FlowDocument>
        </RichTextBox>

    </Grid>
</Page>
