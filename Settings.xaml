<Page x:Class="Cloudsdale_Win7.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="Settings">

    <Grid>
        <TabControl>
            <TabControl.Background>
                <SolidColorBrush Color="{DynamicResource PrimaryBlue}"/>
            </TabControl.Background>
            <TabControl.BorderBrush>
                <SolidColorBrush Color="{DynamicResource PrimaryContent}"/>
            </TabControl.BorderBrush>
            <TabItem Header="User Settings">
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#FFF0F0F0" Offset="0"/>
                        <GradientStop Color="{DynamicResource PrimaryBackground}" Offset="1"/>
                    </LinearGradientBrush>
                </TabItem.Background>
                <Grid>
                    <Grid.Background>
                        <SolidColorBrush Color="{DynamicResource PrimaryBackground}"/>
                    </Grid.Background>
                </Grid>
            </TabItem>
            <TabItem Header="Application Settings">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.Background>
                        <SolidColorBrush Color="{DynamicResource PrimaryBackground}"/>
                    </Grid.Background>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Page>
